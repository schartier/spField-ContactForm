  	<file lang="fr_FR">fr-FR.SpApp.contactform.ini</file>
  	<file lang="de_DE">de-DE.SpApp.contactform.ini</file>
        <file lang="nl_NL">nl-NL.SpApp.contactform.ini</file>
  </language>
  <files path="adm:field">
